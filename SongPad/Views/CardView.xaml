<UserControl x:Class="SongPad.Views.CardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:SongPad.ViewModels"
             mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance viewModels:CardViewModel}"
             d:DesignHeight="300" d:DesignWidth="300" Background="#535353">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/SongPad;component/Resources/Templates.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<Grid Grid.Row="0" Margin="5,0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="20" />
				<ColumnDefinition Width="20" />
			</Grid.ColumnDefinitions>
			<Label MouseDoubleClick="OnHeaderDoubleClick" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
				<Grid>
					<TextBlock Text="{Binding Title}"
						   Visibility="{Binding IsEditingTitle, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}"
						   VerticalAlignment="Center" Foreground="White" />
					<TextBox x:Name="HeaderTextBox"
						 Text="{Binding Title, Mode=TwoWay}"
						 KeyUp="OnHeaderKeyUp"
						 Visibility="{Binding IsEditingTitle, Converter={StaticResource BooleanToVisibilityConverter}}"
						 VerticalContentAlignment="Center">
					</TextBox>
				</Grid>
			</Label>
			<Button Grid.Column="1" Margin="0,5" Template="{StaticResource ImageButton}">
				<Canvas Width="16" Height="16" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
					<Path Stretch="Fill" Width="14" Height="14" Canvas.Left="1" Canvas.Top="1" Fill="#FFFFFFFF" Data="F1 M 35,19L 41,19L 41,35L 57,35L 57,41L 41,41L 41,57L 35,57L 35,41L 19,41L 19,35L 35,35L 35,19 Z "/>
				</Canvas>
			</Button>
			<Button Grid.Column="2" Margin="0,5" Template="{StaticResource ImageButton}">
				<Canvas Width="16" Height="16" Clip="F1 M 0,0L 76.0106,0L 76.0106,76.0106L 0,76.0106L 0,0">
					<Path Width="12" Height="14" Canvas.Left="2" Canvas.Top="1" Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 22.17,36.4216L 25.3369,36.4216L 25.3369,31.6711C 25.3369,24.6745 31.0087,19.0027 38.0053,19.0027C 45.0019,19.0027 50.6737,24.6745 50.6737,31.6711L 50.6737,36.4216L 53.841,36.4216L 53.8411,57.008L 22.17,57.008L 22.17,36.4216 Z M 45.9231,31.6711C 45.9231,27.2982 42.3782,23.7533 38.0053,23.7533C 33.6324,23.7533 30.0875,27.2982 30.0875,31.6711L 30.0875,36.4216L 45.923,36.4216L 45.9231,31.6711 Z "/>
				</Canvas>
			</Button>
			<Button Grid.Column="3" Margin="0,5" Command="{Binding RemoveCommand}" Template="{StaticResource ImageButton}">
				<Canvas Width="16" Height="16" Clip="F1 M 0,0L 76,0L 76,76L 0,76L 0,0">
					<Path Width="10" Height="14" Canvas.Left="3" Canvas.Top="1" Stretch="Fill" Fill="#FFFFFFFF" Data="F1 M 25.3333,23.75L 50.6667,23.75C 51.5411,23.75 51.8541,27.3125 51.8541,27.3125L 24.1458,27.3125C 24.1458,27.3125 24.4589,23.75 25.3333,23.75 Z M 35.625,19.7917L 40.375,19.7917C 40.8122,19.7917 41.9583,20.9378 41.9583,21.375C 41.9583,21.8122 40.8122,22.9584 40.375,22.9584L 35.625,22.9584C 35.1878,22.9584 34.0416,21.8122 34.0416,21.375C 34.0416,20.9378 35.1878,19.7917 35.625,19.7917 Z M 27.7083,28.5L 48.2916,28.5C 49.1661,28.5 49.875,29.2089 49.875,30.0834L 48.2916,53.8334C 48.2916,54.7078 47.5828,55.4167 46.7083,55.4167L 29.2917,55.4167C 28.4172,55.4167 27.7083,54.7078 27.7083,53.8334L 26.125,30.0834C 26.125,29.2089 26.8339,28.5 27.7083,28.5 Z M 30.0833,31.6667L 30.4792,52.25L 33.25,52.25L 32.8542,31.6667L 30.0833,31.6667 Z M 36.4167,31.6667L 36.4167,52.25L 39.5833,52.25L 39.5833,31.6667L 36.4167,31.6667 Z M 43.1458,31.6667L 42.75,52.25L 45.5208,52.25L 45.9167,31.6667L 43.1458,31.6667 Z "/>
				</Canvas>
			</Button>
		</Grid>
		<Canvas Background="White" Grid.Row="1" Margin="5,0,5,5" />
	</Grid>
</UserControl>
